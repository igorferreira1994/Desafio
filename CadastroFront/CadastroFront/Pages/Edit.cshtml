@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cliente.IdCliente" />
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Logotipo" class="control-label"></label>
                <input asp-for="Cliente.Logotipo" class="form-control" />
                <span asp-validation-for="Cliente.Logotipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.IdLogradouro" class="control-label"></label>
                <input asp-for="Cliente.IdLogradouro" class="form-control" />
                <span asp-validation-for="Cliente.IdLogradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
